{
  "mcpServers": {
    "documentation-mcp": {
      "command": "uv",
      "args": [
        "run",
        "--python",
        ">=3.10,<3.13",
        "--with",
        "chromadb",
        "--with",
        "mcp[cli]",
        "--with",
        "numpy",
        "--with",
        "openai",
        "--with",
        "pydantic",
        "--with",
        "semantic-text-splitter",
        "--with",
        "tiktoken",
        "--with",
        "pinecone",
        "--with",
        "pinecone-client",
        "--with",
        "python-dotenv",
        "mcp",
        "run",
        "/Users/calemcnulty/Workspaces/anchoring/mcp-server/app/server.py"
      ],
      "env": {
        "PYTHONPATH": "/Users/calemcnulty/Workspaces/anchoring/mcp-server",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1",
        "CHROMADB_HOST": "localhost",
        "CHROMADB_PORT": "8001",
        "CONTEXT_SOURCE": "local",
        "MCP_SERVER_NAME": "Version-Pinned Documentation Snippets"
      }
    }
  }
} 